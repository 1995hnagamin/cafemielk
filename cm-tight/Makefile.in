# General info
SHELL       = @SHELL@
prefix      = @prefix@
exec_prefix = @exec_prefix@
bindir      = @bindir@
libdir      = @libdir@
datadir     = @datadir@
top_srcdir  = @top_srcdir@
datarootdir = @datarootdir@
srcdir      = @srcdir@
builddir    = @builddir@
VPATH       = $(srcdir)

# These may be overridden by make invocators
DESTDIR        =
GOSH           = "@GOSH@"
INSTALL        = "@GAUCHE_INSTALL@" -S '$(srcdir)' -C

# Module-specific stuff
PACKAGE   = cafemielk

SCMFILES  = cafemielk.scm \
	    cafemielk/linalg.scm \
	    cafemielk/vview.scm

CLEANFILES =
CONFIG_GENERATED = Makefile config.cache config.log config.status \
		   configure.lineno autom4te*.cache $(PACKAGE).gpd

GAUCHE_PKGINCDIR  = "$(DESTDIR)@GAUCHE_PKGINCDIR@"
GAUCHE_PKGLIBDIR  = "$(DESTDIR)@GAUCHE_PKGLIBDIR@"
GAUCHE_PKGARCHDIR = "$(DESTDIR)@GAUCHE_PKGARCHDIR@"

all : $(TARGET)
	$(MAKE) -C src all

check : all
	@rm -f test.log
	$(GOSH) -I$(builddir) -I$(top_srcdir) -I$(top_srcdir)/src $(top_srcdir)/test.scm > test.log

install : all
	$(INSTALL) -m 444 -T $(GAUCHE_PKGLIBDIR) $(SCMFILES)
	cd src; $(MAKE) install

uninstall :
	$(INSTALL) -U $(GAUCHE_PKGLIBDIR) $(SCMFILES)
	$(INSTALL) -m 444 -T $(GAUCHE_PKGLIBDIR)/.packages $(PACKAGE).gpd
	cd src; $(MAKE) install

clean :
	cd src; $(MAKE) clean
	rm -rf core $(CLEANFILES) *~ test.log so_locations

distclean : clean
	cd src; $(MAKE) distclean
	rm -rf $(CONFIG_GENERATED)

maintainer-clean : clean
	cd src; $(MAKE) maintainer-clean
	rm -rf $(CONFIG_GENERATED)  VERSION
